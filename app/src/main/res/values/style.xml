<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ShapeAppearanceOverlay.MyApp.Fab" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundedTopBorder" parent="">
        <item name="cornerFamilyTopLeft">rounded</item>> <!-- Adjust this based on your design -->
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeTopRight">20dp</item>
    </style>

    <style name="RoundedBorder" parent="">
        <item name="cornerSize">16dp</item>
    </style>

    <style name="RoundedBottomBorder" parent="">
        <item name="cornerFamilyTopLeft">cut</item>
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerFamilyBottomLeft">rounded</item>> <!-- Adjust this based on your design -->
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="shapeAppearance">@style/ShapeAppearanceOverlay.MyApp.Fab</item>
        <item name="android:color">@color/custom_orange</item>
    </style>
</resources>