<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/s_green"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="130dp"
        android:layout_height="125dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/onb1_2"
        android:layout_marginStart="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Gambar yang bisa diatur letaknya -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="500dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="55dp"
        android:src="@drawable/onb1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Layout yang menimpa sebagian gambar -->
    <RelativeLayout
        android:id="@+id/overlayLayout"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_marginTop="400dp"
        android:layout_marginStart="-50dp"
        android:background="@drawable/rounded"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Tulisan di atas layout -->
        <com.tbuonomo.viewpagerdotsindicator.WormDotsIndicator
            android:id="@+id/worm_dots_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:dotsColor="@color/premier_color"
            app:dotsStrokeColor="@color/premier_color"
            app:dotsCornerRadius="8dp"
            app:dotsSize="13dp"
            app:dotsSpacing="4dp"
            app:dotsStrokeWidth="2dp"
            tools:ignore="MissingConstraints"
            android:layout_marginStart="65dp"
            android:layout_marginTop="25dp"
            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:layout_below="@id/worm_dots_indicator"
            android:fontFamily="@font/nunito_bold"
            android:layout_marginTop="10dp"
            android:layout_marginStart="90dp"
            android:text="Track your health with feminacare"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:fontFamily="@font/nunito_semibold"
            android:layout_marginStart="90dp"
            android:layout_below="@id/textView"
            android:text="Feminacare - your female health assistant help you to track all calendar periode  and give your suggestion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView" />

        <!-- Dua tombol di bawah layout -->
        <Button
            android:id="@+id/button_next"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_below="@id/textView2"
            android:layout_marginTop="15dp"
            android:text="Next"
            android:backgroundTint="@color/premier_color"
            android:fontFamily="@font/nunito_semibold"
            android:layout_marginStart="90dp"
            app:cornerRadius = "20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView2" />

        <TextView
            android:id="@+id/button2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_next"
            android:layout_marginStart="90dp"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/nunito_semibold"
            android:text="Skip"
            android:textSize="12dp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_next" />

    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>