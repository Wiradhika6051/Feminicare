<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/s_pink"
    android:layout_height="match_parent">

    <!-- Gambar yang bisa diatur letaknya -->
    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/onboarding_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/onboarding_3_2"
        android:layout_marginStart="220dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/onboarding_3_3"
        android:layout_marginStart="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Layout yang menimpa sebagian gambar -->
    <RelativeLayout
        android:id="@+id/overlayLayout"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_marginTop="400dp"
        android:layout_marginStart="-50dp"
        android:background="@drawable/rounded"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Tulisan di atas layout -->
        <com.tbuonomo.viewpagerdotsindicator.WormDotsIndicator
            android:id="@+id/worm_dots_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:dotsColor="@color/premier_color"
            app:dotsStrokeColor="@color/premier_color"
            app:dotsCornerRadius="8dp"
            app:dotsSize="13dp"
            app:dotsSpacing="4dp"
            app:dotsStrokeWidth="2dp"
            tools:ignore="MissingConstraints"
            android:layout_marginStart="65dp"
            android:layout_marginTop="25dp"
            />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/worm_dots_indicator"
            android:layout_marginStart="90dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nunito_bold"
            android:text="Consult with chatbot about your health"
            android:textSize="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:fontFamily="@font/nunito_semibold"
            android:layout_marginStart="90dp"
            android:layout_below="@id/textView5"
            android:text="In this app, you can chat chatbot and detect your menstrual period health by camera"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView5" />

        <!-- Dua tombol di bawah layout -->
        <Button
            android:id="@+id/button5"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_below="@id/textView6"
            android:layout_marginTop="15dp"
            android:text="Next"
            android:fontFamily="@font/nunito_semibold"
            android:layout_marginStart="90dp"
            android:backgroundTint="@color/premier_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView6" />

        <TextView
            android:id="@+id/button6"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/button5"
            android:layout_marginStart="90dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/nunito_semibold"
            android:text="Skip"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button5" />

    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>